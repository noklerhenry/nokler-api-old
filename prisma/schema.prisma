generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id          String        @id @default(uuid())
  name        String        @unique @db.VarChar(100)
  released_at DateTime?
  rating      Float?
  image       String?       @db.VarChar(2048)
  description String?
  trailer     String?       @db.VarChar(2048)
  genres      Genre[]
  platforms   Platform[]
  productKey  ProductsKey[]
}

model Genre {
  id    Int    @id @default(autoincrement())
  name  String @unique @db.VarChar(50)
  games Game[]
}

model Platform {
  id         Int           @id @default(autoincrement())
  name       String        @unique @db.VarChar(50)
  games      Game[]
  productKey ProductsKey[]
}

model Store {
  id          Int           @id @default(autoincrement())
  name        String        @unique @db.VarChar(50)
  ProductsKey ProductsKey[]
}

// a store can have zero or more products
// a productKey always have an store

model ProductsKey {
  id         Int      @id @default(autoincrement())
  price      Float
  key        String   @unique @db.VarChar(50)
  store      Store    @relation(fields: [storeId], references: [id])
  storeId    Int
  game       Game     @relation(fields: [gameId], references: [id])
  gameId     String
  platform   Platform @relation(fields: [platformId], references: [id])
  platformId Int
  cart       Cart?    @relation(fields: [cartId], references: [id])
  cartId     Int?
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
}

// a product can have zero or more products
// a cart always have an

model Order {
  id        Int      @id @default(autoincrement())
  dateOrder DateTime @default(now())
  cart      Cart     @relation(fields: [idCart], references: [id])
  idCart    Int
  payment   Payment?
  status    Boolean
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}

model Cart {
  id         Int           @id @default(autoincrement())
  productKey ProductsKey[]
  order      Order[]
  subTotal   Float
}

model Payment {
  id      Int    @id @default(autoincrement())
  order   Order  @relation(fields: [orderId], references: [id])
  orderId Int    @unique
  amount  Float
  status  Status @default(PENDING)
}

model User {
  id          Int           @id @default(autoincrement())
  name        String        @unique @db.VarChar(50)
  email       String        @unique @db.VarChar(50)
  password    String        @db.VarChar(50)
  rol         Rol           @default(USER)
  state       State         @default(STANDARD)
  img         String?
  userProduct ProductsKey[]
  order       Order[]
}

enum Status {
  PENDING
  CANCEL
  FINISHED
}

enum Rol {
  USER
  ADMIN
}

enum State {
  PREMIUM
  STANDARD
}
